<p id="notice"><%= notice %></p>
<style>
  .soldiers {
    width: 600px;
    margin-left:auto;
    margin-right: auto;
    box-shadow: 0px 1px 2px rgba(0,0,0,.4);
  }
  .soldiers h1 {
    padding-top: 20px;
    padding-left: 30px;
  }
  .soldiers .item {
    border-bottom: 1px solid #eee;
    padding: 10px;
  }
  .soldiers .item img {
    width: 30px;
    height: 30px;
    margin-right: 5px;
  }
  .soldiers .item .actions {
    float: right;
    margin-top: 8px;
  }
    .soldiers .add {
      padding: 15px 50px;
    }
</style>

<div class="soldiers">
  <h1>Soldiers</h1>
    <% @soldiers.each do |soldier| %>
      <div class="item">

        <img src="https://upload.wikimedia.org/wikipedia/he/thumb/6/68/AmanLogo.svg/1024px-AmanLogo.svg.png" />
        <span><%= soldier.name %></span>
        <span><%= soldier.idd %></span>
        <div class="actions">

          <span><%= link_to 'Show', soldier %></span>
          <span><%= link_to 'Edit', edit_soldier_path(soldier) %></span>
          <span><%= link_to 'Destroy', soldier, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
    <% end %>
  <div class="add">
    <%= link_to 'New Soldier', new_soldier_path %>
  </div>
</div>

<br>

